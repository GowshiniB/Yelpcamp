<% layout('layouts/boilerplate') %> 
<div class="container d-flex justify-content-center align-items-center mb-5 ">
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow mb-5" style="width: fit-content;">
        <img
          src="https://images.unsplash.com/photo-1627490601633-1b45a55e13b6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MzV8fGNhbXBpbmd8ZW58MHx8MHx8&auto=format&fit=crop&w=1000&q=60"
          class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">Sign Up</h5>
          <form action="/register" class="validated-form card-text" method="post" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required autofocus>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
          
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
          
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="d-grid gap-2 ">
            <button class="btn btn-success">Sign Up</button>
          </div>
          </form>
        </div>

      </div>

    </div>
  </div>
</div>



